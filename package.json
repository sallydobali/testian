{
  "name": "electron-chat-app",
  "version": "1.0.0",
  "description": "Electron app with chat functionality",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "chat",
    "desktop-app",
    "persian"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.electron-chat-app",
    "productName": "Electron Chat App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "chat.html",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sallydobali/testian.git"
  },
  "bugs": {
    "url": "https://github.com/sallydobali/testian/issues"
  },
  "homepage": "https://github.com/sallydobali/testian#readme"
}
